# Environment variables for production
COMPOSE_PROJECT_NAME=chemouflage-card-shop

# Database Configuration
MONGODB_URL=mongodb://admin:password123@mongodb:27017/chemouflage?authSource=admin
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=chemouflage

# Backend Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production

# Cloudinary Configuration (Frontend)
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name

# Cloudinary API credentials (for upload scripts only - keep secure)
# These are needed only if you want to upload images programmatically
# For production, use environment variables or secure key management
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_V1_STR=/api/v1
PROJECT_NAME=Chemouflage Card Shop API
ENVIRONMENT=production

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379/0

# Email Configuration (if needed)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Chemouflage Card Shop

# Security
CORS_ORIGINS=["http://localhost", "http://localhost:3000", "https://yourdomain.com"]

# Logging
LOG_LEVEL=INFO
