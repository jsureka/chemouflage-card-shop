            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"John Doe Updated\",\n  \"phone\": \"+9876543210\",\n  \"avatar_url\": \"https://example.com/avatar.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/users/me",
