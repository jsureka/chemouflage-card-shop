# .env.example
# Copy this file to .env and fill in your actual values

# MongoDB settings
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=chemouflagedb

# Authentication settings
SECRET_KEY=your_very_secure_secret_key_here_change_for_production
REFRESH_TOKEN_SECRET_KEY=your_refresh_token_secret_key_change_for_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Frontend URL for email links and redirects
FRONTEND_URL=http://localhost:8080

# Backend URL for callbacks
BACKEND_URL=http://localhost:8000

# Email Configuration
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=hello@yourcompany.com
MAIL_FROM_NAME=Your Company Name
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
USE_CREDENTIALS=true
VALIDATE_CERTS=true

# AamarPay Configuration (Sandbox)
AAMARPAY_SANDBOX=true
AAMARPAY_STORE_ID=aamarpaytest
AAMARPAY_SIGNATURE_KEY=your_aamarpay_signature_key

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# API settings
BACKEND_CORS_ORIGINS=["http://localhost:8000", "http://localhost:8080"]
